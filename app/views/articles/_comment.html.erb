<div>
  <h4><%= comment.author_name %></h4>
  <p class="comment"><%= comment.body %></p>
  <p>
    Posted <%= distance_of_time_in_words(comment.created_at, Time.new)  %> 
    ago
  </p>
  <% if logged_in? %>
    <%= link_to "Delete Comment", article_comment_path(comment.article, comment), 
        method: :delete %>
  <% end %>
</div>